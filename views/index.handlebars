<h1>Cats!</h1>

<h2>Cats that are not sleepy!</h2>

<h2>Add a Cat</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Cat Name:</label>
        <input type="text" id="ca" name="name">
    </div>

    {{#each notEaten}}
    <tr>
        <td>{{burger_name}}</td>
        <td>{{user_created}}</td>
        <td>{{created_at}}</td>
        <td>
            <button class="btn btn-default eatIt" data-value="{{id}}" type="submit">
                <i class="fa fa-heart eatIt" aria-hidden="true" data-value="{{id}}"></i>
            </button>
        </td>


    </tr>

    {{/each}}
</form>